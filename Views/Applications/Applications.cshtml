@{
    ViewData["Title"] = "Applications";
    ViewData["LandingTitle"] = "Applications";
}

@section styles {
    <link rel="stylesheet" href="~/assets/styles/programs.css" />
    <style>
        .programs .card .card-body a, .delete-button, .primary-button {
            display: inline-block;
            margin: 8px;
            width: auto;
            font-size: 15px;
            padding: 14px
        }

        .delete-application-form {
            display: inline-block
        }
    </style>
}

@model IEnumerable<WeCount.Models.Application>
<div class="programs">
    <div class="container">
        @foreach (var item in Model)
        {
            <div class="card">
                <object data="@item.Resume" type="application/pdf"></object>
                <div class="card-body">
                    <strong>@item.Resume</strong>
                    <h4 class="card-header">@item.FullName</h4>
                    <strong>Mail: @item.Mail</strong>
                    <strong>Phone:  @item.Phone</strong>

                    <strong>
                        Years Of Experience: @item.YearsOfExperinces
                        @if (item.YearsOfExperinces == 1)
                        {
                            <span>Year</span>
                        }
                        else if (item.YearsOfExperinces == 1)
                        {
                            <span>Years</span>
                        }
                    </strong>

                    <p class="card-text three-lines">Study Level:  @item.StudyLevel</p>
                    <div>
                        <a class="primary-button" asp-controller="Applications" asp-action="DisplayApplication" asp-route-slag="@item.Slag">Show more</a>
                        <form class="delete-application-form" asp-action="DeleteApplication" asp-controller="Applications" method="post" asp-route-slag="@item.Slag">
                            <button class="delete-button" type="submit">Delete</button>
                        </form>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section scripts {
    @*<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>*@
    <script src="~/assets/scripts/sweetalert2.all.min.js"></script>
    <script>
        const deleteApplicationForms = document.querySelectorAll('.delete-application-form');
        deleteApplicationForms.forEach(form => {
            form.addEventListener('submit', function (e) {
                e.preventDefault();
                Swal.fire({
                    title: 'Do you really want to delete This application?',
                    showCancelButton: true,
                    confirmButtonText: 'Delete',
                }).then((result) => {
                    if (result.isConfirmed) {
                        e.target.submit();
                    }
                })
            })
        })
    </script>
} 